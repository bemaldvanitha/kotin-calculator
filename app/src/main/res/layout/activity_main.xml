<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingLeft="10pt"
    android:paddingTop="20pt"
    android:paddingRight="10pt"
    android:paddingBottom="10pt"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/showNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:ems="10"
        android:gravity="right"
        android:hint="0"
        android:inputType="textPersonName"
        android:paddingTop="40pt"
        android:textColor="@color/white"
        android:textSize="30pt" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/butAc"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="butClearEvent"
                android:text="Ac"
                android:textSize="20dp" />

            <Button
                android:id="@+id/butPlusMin"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="+/-"
                android:textSize="20dp" />

            <Button
                android:id="@+id/butPercent"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="clickPerEvent"
                android:text="%"
                android:textSize="20dp" />

            <Button
                android:id="@+id/butDiv"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="butOppEvent"
                android:text="/"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/but7"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="butNumberEvent"
                android:text="7"
                android:textSize="20dp" />

            <Button
                android:id="@+id/but8"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="butNumberEvent"
                android:text="8"
                android:textSize="20dp" />

            <Button
                android:id="@+id/but9"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="butNumberEvent"
                android:text="9"
                android:textSize="20dp" />

            <Button
                android:id="@+id/butMulti"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="butOppEvent"
                android:text="*"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/but4"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="butNumberEvent"
                android:text="4"
                android:textSize="20dp" />

            <Button
                android:id="@+id/but5"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="butNumberEvent"
                android:text="5"
                android:textSize="20dp" />

            <Button
                android:id="@+id/but6"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="butNumberEvent"
                android:text="6"
                android:textSize="20dp" />

            <Button
                android:id="@+id/butSub"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="butOppEvent"
                android:text="-"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/but1"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="butNumberEvent"
                android:text="1"
                android:textSize="20dp" />

            <Button
                android:id="@+id/but2"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="butNumberEvent"
                android:text="2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/but3"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="butNumberEvent"
                android:text="3"
                android:textSize="20dp" />

            <Button
                android:id="@+id/butAdd"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="butOppEvent"
                android:text="+"
                android:textSize="20dp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/but0"
            android:layout_width="80dp"
            android:layout_height="40pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/white"
            android:onClick="butNumberEvent"
            android:text="0"
            android:textSize="20dp" />

        <Button
            android:id="@+id/butDot"
            android:layout_width="40dp"
            android:layout_height="40pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/white"
            android:onClick="butNumberEvent"
            android:text="."
            android:textSize="20dp" />

        <Button
            android:id="@+id/butEqual"
            android:layout_width="40dp"
            android:layout_height="40pt"
            android:layout_weight="1"
            android:background="@color/orange"
            android:onClick="butEqualEvent"
            android:text="="
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>